generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userID    String   @unique
  username  String
  email     String
  name      String
  image     String
  banner    String
  password  String?
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Dungeons {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  eventId     String   @unique
  name        String?
  creatorName String
  date        DateTime
  morList     Json[]
  roles       Json[]
}

model DungeonsHistory {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  dungeon   String
  eventId   String   @unique
  players   Json[]
  createdAt DateTime @default(now())
}

